{
  "UIElements": {
    "Header": {
      "type": "textHeader",
      "properties": {
        "text": "Alcohol Intake Tracker",
        "color": "blue",
        "fontSize": 24,
        "alignment": "center"
      },
      "position": "top"
    },
    "ScoreDisplay": {
      "type": "numericDisplay",
      "properties": {
        "value": 50,
        "fontSize": 20,
        "alignment": "centerBelowHeader"
      }
    },
    "Accordion": {
      "type": "multiLevelAccordion",
      "properties": {
        "levels": [
          {
            "name": "Drink Type",
            "options": ["Beer", "Wine", "Cocktail", "Custom"],
            "info": "Select the type of alcoholic beverage."
          },
          {
            "name": "Size/CocktailType",
            "options": {
              "Beer": ["8oz", "10oz", "12oz", "16oz", "20oz"],
              "Wine": ["4oz", "5oz", "6oz", "9oz"],
              "Cocktail": ["Old-fashioned", "Manhattan", "Highball", "Sour"],
              "Custom": ["Ounces slider"]
            },
            "info": "Choose the size of your drink or type of cocktail."
          },
          {
            "name": "Alcohol Content",
            "options": {
              "8oz": ["4%", "5%", "6%", "7%", "8%", "9%", "10%"],
              "10oz": ["4%", "5%", "6%", "7%", "8%", "9%", "10%"],
              "12oz": ["4%", "5%", "6%", "7%", "8%", "9%", "10%"],
              "16oz": ["4%", "5%", "6%", "7%", "8%", "9%", "10%"],
              "20oz": ["4%", "5%", "6%", "7%", "8%", "9%", "10%"],
              "4oz": ["10%", "11%", "12%", "13%", "14%", "20%"],
              "5oz": ["10%", "11%", "12%", "13%", "14%", "20%"],
              "6oz": ["10%", "11%", "12%", "13%", "14%", "20%"],
              "9oz": ["10%", "11%", "12%", "13%", "14%", "20%"],
              "Old-fashioned": ["40%", "45%", "50%", "55%"],
              "Manhattan": ["40%", "45%", "50%", "55%"],
              "Highball": ["40%", "45%", "50%", "55%"],
              "Sour": ["40%", "45%", "50%", "55%"],
              "Ounces slider": ["% slider"]
            },
            "info": "Select the alcohol content percentage."
          }
        ],
        "onFinalSelect": "addDrinkAndUpdateScore"
      }
    },
    "FeedbackToast": {
      "type": "toastMessage",
      "properties": {
        "text": "Drink added!",
        "color": "green",
        "displayDuration": 3,
        "appearanceTrigger": "onFinalDrinkSelect"
      }
    }
  },
  "Interactions": {
    "addDrinkAndUpdateScore": {
      "type": "function",
      "info": "After final drink selection, update user's alcohol score and show feedback toast."
    }
  },
  "Tips": {
    "OptimizedSpace": "Ensure each accordion section expands to fit content, but does not dominate screen.",
    "TouchFriendly": "Ensure all accordion touch targets are sized comfortably for mobile interaction.",
    "IntuitiveSliders": "For the 'Custom' section, ensure sliders are intuitive, offering max/min values and tactile feedback."
  }
}
